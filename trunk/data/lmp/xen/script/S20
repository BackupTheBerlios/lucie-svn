#!/usr/bin/cfengine

control:
        access = ( root )
        sysadm = ( root )

        actionsequence = (
                editfiles
        )

editfiles:
        any::
        # change the default boot kernel
        { /tmp/target/boot/grub/menu.lst
                # TODO : Assuming that there have been only one kernel in menu.lst
		ReplaceAll "default 0" With "default 1"
        }
